<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "UET Library", root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-left">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Category <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Books", books_path %></li>
          <li class="divider"></li>
          <% Category.all.each do |category| %>
            <li><%= link_to category.name, category_path(category) %></li>
            <li class="divider"></li>
          <% end %>
        </ul>
      </li>
    </ul>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("links.home"), root_path %></li>
        <li><%= link_to t("links.help"), "#" %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layoust.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("links.profile"), current_user %></li>
              <li><%= link_to t("links.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("links.sign_out"), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else%>
          <li ><%= link_to t("links.sign_in"), new_user_session_path %> </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
